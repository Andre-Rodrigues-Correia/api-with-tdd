{
  "name": "api-with-tdd",
  "version": "1.0.0",
  "description": "the purpose of this repository is to develop a simple api using TDD.",
  "main": "index.js",
  "jest": {
    "coverageThreshold": {
      "global": {
        "statement": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./src/services": {
        "lines": 100
      }
    }
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node src/server.js",
    "test": "jest --coverage --runInBand --forceExit",
    "lint": "eslint src/** test/** --fix",
    "secure-mode": "jest --watch --verbose=true"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint &&npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andre-Rodrigues-Correia/api-with-tdd.git"
  },
  "keywords": [],
  "author": "Andr√©",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Andre-Rodrigues-Correia/api-with-tdd/issues"
  },
  "homepage": "https://github.com/Andre-Rodrigues-Correia/api-with-tdd#readme",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.0.2",
    "supertest": "^6.2.4"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.20.0",
    "consign": "^0.1.6",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "husky": "^8.0.1",
    "jwt-simple": "^0.5.6",
    "knex": "^2.3.0",
    "knex-logger": "^0.1.0",
    "moment": "^2.29.4",
    "node-cmd": "^5.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.8.0",
    "uuid": "^9.0.0",
    "uuidv4": "^6.2.13",
    "winston": "^3.8.2"
  }
}
